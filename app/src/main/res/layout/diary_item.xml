<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_width="50dp"
        android:layout_height="24dp"
        android:text="THU"
        android:textSize="17sp"
        android:layout_alignParentTop="true"
        android:textColor="@color/dark_grey"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/diary_item_weekday"
        android:background="@drawable/diary_item_bg"/>
    <TextView
        android:layout_width="50dp"
        android:layout_height="36dp"
        android:id="@+id/diary_item_dayofmonth"
        android:text="1"
        android:layout_marginBottom="6dp"
        android:textColor="@color/dark_grey"
        android:textSize="24sp"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@drawable/diary_item_bg"
        android:layout_below="@+id/diary_item_weekday"
        android:layout_marginTop="-2.5dp"/>
    <TextView
        android:layout_width="342dp"
        android:layout_height="58dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/diary_item_bg"
        android:layout_toRightOf="@id/diary_item_weekday"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-2dp"
        android:textSize="18sp"
        android:padding="6dp"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/dark_grey"
        android:text="DayGram 的整体设计十分简洁，但却不会给人简陋的感觉，这就是在细节设计上下足了工夫，但是该有的功能一个都没少。"
        android:id="@+id/diary_item_diaryFrag"/>
    <ImageView
        android:visibility="gone"
        android:id="@+id/diary_item_dot"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_solid_circle"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:id="@+id/diary_item_primeValue"/>
</RelativeLayout>