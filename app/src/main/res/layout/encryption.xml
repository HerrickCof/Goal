<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/color_base" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="296dp"
            android:layout_height="50dp"
            android:id="@+id/encrypt_input"
            android:layout_below="@+id/encrypt_hint"
            android:layout_centerHorizontal="true">
            <TableRow
                android:layout_height="match_parent"
                android:layout_width="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_media_record"
                    android:layout_marginTop="13dp"
                    android:id="@+id/encrypt_input_1"
                    android:layout_marginBottom="13dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_media_record"
                    android:layout_marginTop="13dp"
                    android:id="@+id/encrypt_input_2"
                    android:layout_marginBottom="13dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_media_record"
                    android:layout_marginTop="13dp"
                    android:id="@+id/encrypt_input_3"
                    android:layout_marginBottom="13dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_media_record"
                    android:layout_marginTop="13dp"
                    android:id="@+id/encrypt_input_4"
                    android:layout_marginBottom="13dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    />
            </TableRow>
        </TableLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_grey"
            android:text="[ KEY FOR ACCESSING DIARY ]"
            android:id="@+id/encrypt_hint"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="110dp"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="260dp"
            android:layout_height="2dp"
            android:background="@color/dark_grey"
            android:layout_below="@id/encrypt_input"
            android:id="@+id/encrypt_line"
            android:layout_margin="20dp"
            android:layout_centerHorizontal="true"/>
        <GridLayout
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:id="@+id/encrypt_clipboard"
            android:layout_below="@id/encrypt_line"
            android:layout_centerHorizontal="true"
            android:columnCount="3">
            <Button
                android:layout_height="64dp"
                android:layout_width="64dp"
                android:layout_margin="18dp"
                android:text="1"
                android:id="@+id/encrypt_keyboard_1"
                android:textSize="26sp"
                android:layout_gravity="center"
                android:background="@drawable/encrypt_input_button"/>
            <Button
                android:layout_height="64dp"
                android:layout_width="64dp"
                android:layout_margin="18dp"
                android:text="2"
                android:id="@+id/encrypt_keyboard_2"
                android:textSize="26sp"
                android:layout_gravity="center"
                android:background="@drawable/encrypt_input_button"/>
            <Button
                android:layout_height="64dp"
                android:layout_width="64dp"
                android:layout_margin="18dp"
                android:text="3"
                android:id="@+id/encrypt_keyboard_3"
                android:textSize="26sp"
                android:layout_gravity="center"
                android:background="@drawable/encrypt_input_button"/>
            <Button
                android:layout_height="64dp"
                android:layout_width="64dp"
                android:layout_margin="18dp"
                android:text="4"
                android:id="@+id/encrypt_keyboard_4"
                android:textSize="26sp"
                android:layout_gravity="center"
                android:background="@drawable/encrypt_input_button"/>
            <Button
                android:layout_height="64dp"
                android:layout_width="64dp"
                android:layout_margin="18dp"
                android:text="5"
                android:id="@+id/encrypt_keyboard_5"
                android:textSize="26sp"
                android:layout_gravity="center"
                android:background="@drawable/encrypt_input_button"/>
            <Button
                android:layout_height="64dp"
                android:layout_width="64dp"
                android:layout_margin="18dp"
                android:text="6"
                android:id="@+id/encrypt_keyboard_6"
                android:textSize="26sp"
                android:layout_gravity="center"
                android:background="@drawable/encrypt_input_button"/>
            <Button
                android:layout_height="64dp"
                android:layout_width="64dp"
                android:layout_margin="18dp"
                android:text="7"
                android:id="@+id/encrypt_keyboard_7"
                android:textSize="26sp"
                android:layout_gravity="center"
                android:background="@drawable/encrypt_input_button"/>
            <Button
                android:layout_height="64dp"
                android:layout_width="64dp"
                android:layout_margin="18dp"
                android:text="8"
                android:id="@+id/encrypt_keyboard_8"
                android:textSize="26sp"
                android:layout_gravity="center"
                android:background="@drawable/encrypt_input_button"/>
            <Button
                android:layout_height="64dp"
                android:layout_width="64dp"
                android:layout_margin="18dp"
                android:text="9"
                android:id="@+id/encrypt_keyboard_9"
                android:textSize="26sp"
                android:layout_gravity="center"
                android:background="@drawable/encrypt_input_button"/>
            <Button
                android:layout_height="64dp"
                android:layout_width="64dp"
                android:layout_margin="18dp"
                android:text="BACK"
                android:id="@+id/encrypt_keyboard_back"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:background="@drawable/encrypt_input_button"/>
            <Button
                android:layout_height="64dp"
                android:layout_width="64dp"
                android:layout_margin="18dp"
                android:text="0"
                android:id="@+id/encrypt_keyboard_0"
                android:textSize="26sp"
                android:layout_gravity="center"
                android:background="@drawable/encrypt_input_button"/>
            <RelativeLayout
                android:layout_height="64dp"
                android:layout_width="64dp"
                android:layout_margin="18dp"
                android:layout_gravity="center"
                android:id="@+id/encrypt_keyboard_clear"
                android:background="@drawable/encrypt_input_button"
                >
                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/ic_clear"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </GridLayout>
    </RelativeLayout>
</LinearLayout>