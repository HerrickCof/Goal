<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_steel_blue"
    android:padding="@dimen/widget_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_blue"
        android:layout_margin="8dp"
        android:padding="9dp"
        android:id="@+id/widget_refresh"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" REFRESH"
            android:textColor="@color/color_base"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:id="@+id/widget_refresh_text"
            android:textSize="22sp"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_replay_black_24dp"
            android:layout_toLeftOf="@id/widget_refresh_text"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="145dp"
        android:layout_below="@+id/widget_refresh"
        android:layout_marginLeft="8dp"
        android:id="@+id/widget_goal_1"
        android:background="@color/color_base">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:textSize="10sp"
            android:id="@+id/widget_goal_1_achieved"
            android:textColor="@color/color_font"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/widget_goal_1_des"
            android:layout_below="@+id/widget_goal_1_achieved"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_font"
            android:textSize="@dimen/small_font_size"
            android:maxLines="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/widget_goal_1_days"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/widget_goal_1_des"
            android:textSize="34sp"
            android:textColor="@color/color_font"
            android:maxLines="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/widget_goal_1_days"
            android:textSize="16sp"
            android:textColor="@color/color_font"
            android:text="DAYS"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="145dp"
        android:layout_below="@+id/widget_refresh"
        android:layout_marginLeft="5dp"
        android:id="@+id/widget_goal_2"
        android:layout_toRightOf="@id/widget_goal_1"
        android:background="@color/color_base">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:textSize="10sp"
            android:id="@+id/widget_goal_2_achieved"
            android:textColor="@color/color_font"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/widget_goal_2_des"
            android:layout_below="@+id/widget_goal_2_achieved"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_font"
            android:textSize="@dimen/small_font_size"
            android:maxLines="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/widget_goal_2_days"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/widget_goal_2_des"
            android:textSize="34sp"
            android:textColor="@color/color_font"
            android:maxLines="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/widget_goal_2_days"
            android:textSize="16sp"
            android:textColor="@color/color_font"
            android:text="DAYS"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="145dp"
        android:id="@+id/widget_goal_3"
        android:layout_toRightOf="@+id/widget_goal_2"
        android:layout_below="@+id/widget_refresh"
        android:layout_marginLeft="5dp"
        android:background="@color/color_base">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:textSize="10sp"
            android:id="@+id/widget_goal_3_achieved"
            android:textColor="@color/color_font"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/widget_goal_3_des"
            android:layout_below="@+id/widget_goal_3_achieved"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_font"
            android:textSize="@dimen/small_font_size"
            android:maxLines="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/widget_goal_3_days"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/widget_goal_3_des"
            android:textSize="34sp"
            android:textColor="@color/color_font"
            android:maxLines="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/widget_goal_3_days"
            android:id="@+id/note_goal_days_days"
            android:textSize="16sp"
            android:textColor="@color/color_font"
            android:text="DAYS"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/widget_next_ddl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="RECENT DEADLINE:"
        android:textColor="@color/color_base"
        android:textSize="22sp"
        android:padding="9dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_margin="8dp"
        android:background="@color/color_blue"/>
</RelativeLayout>