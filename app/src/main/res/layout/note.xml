<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/drawer_note"
    >
    <FrameLayout
        android:id="@+id/note"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:background="@color/color_steel_blue"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/home_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goal"
                    android:id="@+id/text_goal"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_smaller_font_size"
                    android:textColor="@color/color_base"
                    android:layout_alignParentLeft="true"
                    android:padding="@dimen/normal_padding"
                    android:layout_marginTop="@dimen/large_margin"
                    />
                <Button
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/ic_plus"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/add_goal"
                    />
            </RelativeLayout>
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_checkmark"
                android:background="@color/color_steel_blue"
                android:layout_alignParentRight="true"
                android:layout_marginTop="35dp"
                android:layout_marginRight="20dp"
                android:visibility="gone"
                android:id="@+id/reminder_select_complete"/>
            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_target_big"
                android:id="@+id/note_icon_big"
                />
            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/note_icon_big"
                android:layout_centerHorizontal="true"
                android:textColor="#1A000000"
                android:text="Set up your Goal!"
                android:textStyle="bold"
                android:textSize="30sp"
                android:id="@+id/note_no_goal_show_text"
                android:layout_marginBottom="40dp"/>
            <GridView
                android:layout_below="@id/home_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"
                android:id="@+id/note_goal"
                android:layout_marginRight="@dimen/normal_margin"
                android:layout_marginLeft="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin"
                >
            </GridView>
        </RelativeLayout>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:id="@+id/note_drawer_left"
        android:layout_gravity="left"
        android:background="@color/color_base"
        android:clickable="true"
        >

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_view_list"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/drawer_header_icon"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="GOAL"
            android:textColor="@color/dark_grey"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/drawer_header_icon"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/color_dim_grey"
            android:layout_below="@id/drawer_header_icon"
            android:layout_marginTop="10dp"
            android:id="@+id/drawer_line"
            android:layout_marginBottom="30dp"
            />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_below="@id/drawer_line">
            <TableRow
                android:id="@+id/drawer_diary"
                android:background="@drawable/drawer_list_bg"
                >
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/ic_document"
                    android:id="@+id/drawer_diary_ic"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="8dp"
                    android:text="Diary"
                    android:textColor="@color/dark_grey"
                    android:textSize="22sp"
                    android:id="@+id/drawer_diary_text"/>
            </TableRow>
            <TableRow
                android:visibility="gone"
                android:id="@+id/drawer_diary_view"
                android:background="@drawable/drawer_list_bg"
                android:weightSum="3"
                >

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/ic_media_record"
                    />
                <TextView
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-20dp"
                    android:layout_marginTop="8dp"
                    android:text="View Diary"
                    android:textColor="@color/dark_grey"
                    android:textSize="18sp"
                    />
            </TableRow>
            <TableRow
                android:visibility="gone"
                android:id="@+id/drawer_diary_key"
                android:background="@drawable/drawer_list_bg"
                android:weightSum="3"
                >
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/ic_media_record"
                    />
                <TextView
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-20dp"
                    android:layout_marginTop="8dp"
                    android:text="Key"
                    android:textColor="@color/dark_grey"
                    android:textSize="18sp"
                    />

            </TableRow>
            <TableRow
                android:id="@+id/drawer_reminder"
                android:background="@drawable/drawer_list_bg"
                >
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/ic_message"
                    android:id="@+id/drawer_reminder_ic"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="8dp"
                    android:text="Reminder"
                    android:textColor="@color/dark_grey"
                    android:textSize="22sp"
                    android:id="@+id/drawer_reminder_text"/>
            </TableRow>
            <TableRow
                android:visibility="gone"
                android:id="@+id/drawer_reminder_new"
                android:background="@drawable/drawer_list_bg"
                android:weightSum="3"
                >

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/ic_media_record"
                    />
                <TextView
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-20dp"
                    android:layout_marginTop="8dp"
                    android:text="Widget Goals"
                    android:textColor="@color/dark_grey"
                    android:textSize="18sp"
                    />
            </TableRow>
            <TableRow
                android:visibility="gone"
                android:id="@+id/drawer_reminder_view"
                android:background="@drawable/drawer_list_bg"
                android:weightSum="3"
                >

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/ic_media_record"
                    />
                <TextView
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-20dp"
                    android:layout_marginTop="8dp"
                    android:text="Set Reminder"
                    android:textColor="@color/dark_grey"
                    android:textSize="18sp"
                    />
            </TableRow>
            <TableRow
                android:id="@+id/drawer_statistics"
                android:background="@drawable/drawer_list_bg"
                >
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/ic_graph_pie_grey"
                    android:id="@+id/drawer_statistics_ic"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="8dp"
                    android:text="Statistics"
                    android:textColor="@color/dark_grey"
                    android:textSize="22sp"
                    android:id="@+id/drawer_statistics_text"/>
            </TableRow>
            <TableRow
                android:id="@+id/drawer_calendar"
                android:background="@drawable/drawer_list_bg"
                >
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/ic_calendar_grey"
                    android:id="@+id/drawer_calendar_ic"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="8dp"
                    android:text="Calendar"
                    android:textColor="@color/dark_grey"
                    android:textSize="22sp"
                    android:id="@+id/drawer_calendar_text"/>
            </TableRow>

        </TableLayout>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_gear"
            android:layout_alignParentBottom="true"
            android:id="@+id/drawer_setting_ic"
            android:layout_marginBottom="23dp"
            android:layout_marginLeft="23dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:textColor="@color/dark_grey"
            android:textSize="22sp"
            android:layout_marginBottom="21dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/drawer_setting"
            android:layout_toRightOf="@id/drawer_setting_ic"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_question"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/drawer_setting"
            android:id="@+id/drawer_about_ic"
            android:layout_marginBottom="23dp"
            android:layout_marginLeft="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Goal"
            android:textColor="@color/dark_grey"
            android:textSize="22sp"
            android:layout_marginBottom="21dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/drawer_about"
            android:layout_toRightOf="@id/drawer_about_ic"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>