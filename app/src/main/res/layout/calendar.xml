<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_base">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calendar"
            android:background="@color/color_steel_blue"
            android:id="@+id/calendar_title"
            android:textStyle="bold"
            android:textSize="@dimen/normal_smaller_font_size"
            android:textColor="@color/color_base"
            android:layout_alignParentLeft="true"
            android:paddingTop="35dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            />
        <!-- date toolbar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calendar_title"
            android:id="@+id/calendar_control_bar"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <!-- prev button -->
            <ImageView
                android:id="@+id/calendar_prev_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                />

            <!-- date title -->
            <TextView
                android:id="@+id/calendar_date_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/color_font"
                android:text="JAN 2017"/>

            <!-- next button -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/calendar_next_button"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"/>
            <!--... Same layout as prev button.-->
            />
        </RelativeLayout>

        <!-- days header -->
        <TableLayout
            android:id="@+id/calendar_header"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/calendar_control_bar"
            android:background="@color/shallow_grey_deeper"
            android:padding="10dp"
            >
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/dark_grey"
                    android:textStyle="bold"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="14dp"
                    android:text="SUN"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/dark_grey"
                    android:textStyle="bold"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:text="MON"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/dark_grey"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:textStyle="bold"
                    android:text="TUE"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/dark_grey"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:textStyle="bold"
                    android:text="WED"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/dark_grey"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:textStyle="bold"
                    android:text="THU"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/dark_grey"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:textStyle="bold"
                    android:text="FRI"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/dark_grey"
                    android:textStyle="bold"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="14dp"
                    android:text="SAT"/>
                <!--... Repeat for MON - SAT.-->
            </TableRow>
        </TableLayout>
        <!-- days view -->
        <GridView
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:id="@+id/calendar_grid"
            android:layout_below="@id/calendar_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numColumns="7"
            android:scrollbars="none"
            android:verticalSpacing="4dp"
            android:horizontalSpacing="4dp"
            />
        <!--info-->
        <TableLayout
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/calendar_grid"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="9dp"
            android:divider="@color/color_base"
            android:id="@+id/calendar_info">
            <TableRow
                android:layout_margin="1dp">
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@drawable/calendar_diary_mark"
                    android:layout_centerInParent="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/color_font"
                    android:textStyle="italic"
                    android:paddingLeft="5dp"
                    android:text="DIARY"/>
            </TableRow>
            <TableRow
                android:layout_margin="1dp">
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@drawable/calendar_goal_end_date"
                    android:layout_centerInParent="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/color_font"
                    android:textStyle="italic"
                    android:paddingLeft="5dp"
                    android:text="GOAL DEADLINE"/>
            </TableRow>
        </TableLayout>
        <!--click grid item show abstract-->
        <TextView
            android:visibility="gone"
            android:id="@+id/calendar_grid_click_text"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/calendar_grid"
            android:textColor="@color/color_font"
            android:background="@color/color_base_deeper"
            android:padding="15dp"
            android:textSize="16sp"
            android:maxLines="5"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"/>
        <!--back button-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_steel_blue"
            android:layout_margin="10dp"
            android:id="@+id/calendar_back_button"
            android:layout_alignParentBottom="true"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="24dp"
                android:id="@+id/calendar_back"
                android:src="@drawable/ic_reply_all"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="[ BACK ]"
                android:textStyle="bold"
                android:textColor="@color/color_base"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/calendar_back"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/calendar_set_year"
            android:background="@color/color_steel_blue"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_above="@+id/calendar_back_button">
            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calendar"/>

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>