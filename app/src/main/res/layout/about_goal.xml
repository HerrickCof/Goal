<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/color_base"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:paddingTop="30dp"
            android:layout_alignParentTop="true"
            android:id="@+id/setting_version">
            <TableRow>
                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    android:background="@color/color_font"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="8dp"
                    android:text="Version"
                    android:textColor="@color/color_font"
                    android:textSize="24sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="30dp"
                    android:text="0.1 alpha"
                    android:textColor="@color/color_font"
                    android:textSize="24sp"
                    />
            </TableRow>
            </TableLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:id="@+id/setting_info"
            android:layout_below="@id/setting_version">
            <TableRow>
                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="30dp"
                    android:background="@color/color_font"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:text="Info"
                    android:textColor="@color/color_font"
                    android:textSize="24sp"/>
            </TableRow>
        </TableLayout>
        <TextView
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:layout_below="@+id/setting_info"
            android:text="@string/info"
            android:textColor="@color/color_font"
            android:textSize="14sp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_steel_blue"
            android:layout_margin="10dp"
            android:id="@+id/about_back_button"
            android:layout_alignParentBottom="true"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="24dp"
                android:id="@+id/setting_back"
                android:src="@drawable/ic_reply_all"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="[ BACK ]"
                android:textStyle="bold"
                android:textColor="@color/color_base"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/setting_back"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>